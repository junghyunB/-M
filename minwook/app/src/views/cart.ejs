        <!-- Main Content-->
        <div style="text-align: center; ">
            <div style="display: inline-block; width:80%;">
                <p style="padding: 18px;"><h1 class='headline'>장바구니</h1>
                <br>
                <div>
                    <!-- <table border="1"> -->
                    <table class="table table-hover">
                        <thead>
                          <tr>
                            <th style="text-align: center;">No</th>
                            <th style="text-align: center;">노래</th>
                            <th style="text-align: center;">가수</th>
                            <th style="text-align: center;">가격</th>
                          </tr>
                        </thead>
                    <%
                    for(var i = (cart * cart_num) - cart_num; i < (cart * cart_num); i++) {
                    if(i > length){
                        i++;
                    }else{
                        var data = rows[i]
                    %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= data.music %></td>
                        <td><%= data.singer %></td>
                        <td><%= data.price %></td>
                    </tr>
                    <% }
                    }
                    %>
                    <tr>
                        <td colspan="6" class='headline' >
                            <%
                            for(var j = 0; j < rows.length / cart_num; j++){
                            %>
                            <!-- row.length = 글총갯수  cart_num= 페이지당 최대 글수 -->
                           
                            [<a href="/board/cart/<%= j + 1 %>" style="text-decoration: none; color: black"><%= j + 1 %></a>]
                            <%
                            }
                            %>
                        </td>
                    </tr>
                    </table>
                
                <div class="write" style="text-align: right;">
                <button type="button" class="btn btn-outline-success" onclick="location.href='/board/write'">글쓰기</button>   
             </div>
